<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Telas.TelaMaps"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pesquisarEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Pesquisar..."
        android:paddingLeft="10dp"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:id="@+id/pesquisarIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/pesquisar" />

    <Button
        android:id="@+id/botaoAlterarFiltros"
        android:text="Altere os filtros de busca"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_blue"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/pesquisarEdit" />

    <Button
        android:id="@+id/botaoListar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:background="@drawable/rounded_button_blue"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/botaoAlterarFiltros"
        android:layout_marginBottom="20dp"
        android:layout_alignEnd="@+id/pesquisarIcon"
        android:layout_alignStart="@+id/botaoAlterarFiltros" />
</RelativeLayout>