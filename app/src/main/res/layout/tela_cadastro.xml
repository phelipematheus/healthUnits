<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_cadastro"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_cadastro" />

    <TextView
        android:id="@+id/txt_view_criar_conta"
        android:text="Criar uma conta"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"/>

    <EditText
        android:id="@+id/emailCadastro"
        android:hint="E-mail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txt_view_criar_conta"
        android:layout_alignStart="@+id/senhaCadastro" />

    <EditText
        android:id="@+id/senhaCadastro"
        android:hint="Senha"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/emailCadastro"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/senhaConfirmaCadastro"
        android:hint="Confirmar Senha"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/senhaCadastro"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botaoCadastrar"
        android:text="Cadastrar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_green"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/emailCadastro" />

</RelativeLayout>