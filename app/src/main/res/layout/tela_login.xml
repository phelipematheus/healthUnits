<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projetomobile.jpm.healthunits.TelaLogin"
    android:background="@drawable/background_login">

    <EditText
        android:id="@+id/emailEdit"
        android:hint="E-mail"
        android:textStyle="italic"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="10dp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/senhaEdit"
        android:layout_alignStart="@+id/senhaEdit" />


    <EditText
        android:id="@+id/senhaEdit"
        android:hint="Senha"
        android:textStyle="italic"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/botaoEntrar"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="10dp"
        android:ems="10"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/botaoEntrar"
        android:text="Entrar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senhaEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button_green"
        android:textColor="@android:color/white"
        android:onClick="abreSearchFilter"/>

    <TextView
        android:id="@+id/naoPossuiConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ainda nÃ£o possui conta? "
        android:layout_marginLeft="8dp"
        android:textSize="17sp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/emailEdit"
        android:layout_alignStart="@+id/emailEdit" />

    <TextView
        android:id="@+id/cadastreSe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:text="Cadastre-se"
        android:textSize="17sp"
        android:textColor="#c50033ff"
        android:layout_alignBaseline="@+id/naoPossuiConta"
        android:layout_alignBottom="@+id/naoPossuiConta"
        android:layout_toEndOf="@+id/naoPossuiConta"
        android:onClick="abreCadastro"/>

    <TextView
        android:id="@+id/esqueceuSenha"
        android:text="Esqueceu sua senha? "
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_below="@+id/botaoEntrar"
        android:layout_toStartOf="@+id/cadastreSe"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/cliqueAqui"
        android:text="Clique aqui"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:layout_alignBaseline="@+id/esqueceuSenha"
        android:layout_toEndOf="@+id/esqueceuSenha"
        android:textColor="#c50033ff"
        android:onClick="abreEsqueciSenha" />

    <ImageView
        android:id="@+id/entreFacebook"
        android:src="@drawable/facebook"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/esqueceuSenha"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/entreGoogle"
        android:src="@drawable/google"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/entreFacebook"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="HEALTH UNITS"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="17dp"
        android:lineSpacingExtra="8sp"
        android:textSize="50sp"
        android:textStyle="bold" />


</RelativeLayout>
