<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.projetomobile.jpm.healthunits.telas.TelaMenuNavegacao">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hospital400x300"
        android:id="@+id/imageView" />

    <Button
        android:id="@+id/btn_mapa_hospitais"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_lista_hospitais"
        android:layout_alignBottom="@+id/btn_lista_hospitais"
        android:layout_alignEnd="@+id/btn_chat"
        android:background="@drawable/rounded_button_green"
        android:text="Mapa dos Hospitais"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_lista_hospitais"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_chat"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/rounded_button_green"
        android:text="Lista de Hospitais"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_pre_chat"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignBottom="@+id/btn_chat"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/botao_circular"
        android:text="Preciso de socorro"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sair"
        android:layout_alignEnd="@+id/btn_sair"
        android:layout_alignStart="@+id/btn_sair"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button_green"
        android:text="Chat"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_lista_hospitais"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/rounded_button_red"
        android:text="Sair"
        android:textColor="@android:color/white"/>

</RelativeLayout>
